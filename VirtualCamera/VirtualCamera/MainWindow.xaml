<Window x:Class="VirtualCamera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VirtualCamera"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1500" KeyDown="KeyStrokeDown">
    <Grid Margin="0,0,-31,-21">
        <Grid.RowDefinitions>
            <RowDefinition Height="649*"/>
            <RowDefinition Height="320*"/>
        </Grid.RowDefinitions>
        <Canvas Name="MyCanvas" Background="Black" Margin="0,0,28,10" Grid.RowSpan="2"/>
        <Label Foreground="RosyBrown" FontSize="20">
            <TextBlock>
                Controls: <LineBreak/>  
                WASD - movement up/down/right/left <LineBreak/>
                E and Q - movement forward and backwards <LineBreak/>
                Y and U - rotation around X axis <LineBreak/>
                H and J - rotation around Y axis <LineBreak/>
                N and M - rotation around Z axis <LineBreak/>
                I and O - zoom in and zoom out
            </TextBlock>
        </Label>
    </Grid>
</Window>
